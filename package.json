{
  "name": "express-typescript-starter",
  "version": "1.0.0",
  "description": "Starter template for express app using typescript",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/ubeytdemirr/express-typescript-starter",
  "keywords": [],
  "scripts": {
    
    "start": "nodemon -r dotenv/config  ./build/main dotenv_config_path=./env/.production.env",
    "dev": "nodemon -r dotenv/config  ./build/main dotenv_config_path=./env/.dev.env",
    "redis": "redis-server --port 6380 --slaveof 127.0.0.1 6379",
    "build": "tsc -p tsconfig.json",
    "fix:tslint": "tslint --fix --project .",
    "watch": "tsc",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:publish": "gh-pages -d build/docs"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@types/redis": "^2.8.27",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@bitjson/typedoc": "^0.15.0-0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/helmet": "0.0.48",
    "@types/node-fetch": "^2.5.7",
    "dotenv": "^8.2.0",
    "gh-pages": "^3.1.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^4.0.2"
  }
}
